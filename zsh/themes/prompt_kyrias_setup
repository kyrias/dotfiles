prompt_kyrias_help() {
	cat <<EOF
kyrias' prompt.
EOF
}

venv_prompt() {
	if [[ -n "$VIRTUAL_ENV" ]]; then
		print -Pn '(${VIRTUAL_ENV##*/}) '
	fi
}

prompt_kyrias_setup() {
	setopt prompt_subst
	autoload -U colors && colors

	PROMPT='%m:%~ $(venv_prompt)%}Î» '
}

prompt_kyrias_preview() {
	prompt_preview_theme kyrias "$@"
}

prompt_kyrias_setup "$@"

